@page
@model NHLCafe.Pages.Create

@{
    
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script>
    var settings = {
        validClass: "is-valid",
        errorClass: "is-invalid"
    };
    $.validator.setDefaults(settings);
    $.validator.unobtrusive.options = settings;
    </script>
}

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Product.ProductName" class="form-control" placeholder="Enter product name">
        <span class="invalid-feedback" asp-validation-for="Product.ProductName"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <input asp-for="Product.Description" class="form-control" placeholder="Enter product description">
        <span class="invalid-feedback" asp-validation-for="Product.Description"></span>
    </div>

    <div class="form-group">
        <label>Price</label>
        <input type="number" asp-for="Product.Price" class="form-control" placeholder="Enter product price">
        <span class="invalid-feedback" asp-validation-for="Product.Price"></span>
    </div>

    <div class="form-group">
        <label>Category</label>
        <select class="form-select" asp-for="Product.CategoryId">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
    </div>
    

